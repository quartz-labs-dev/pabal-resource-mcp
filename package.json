{
  "name": "pabal-resource-mcp",
  "version": "1.5.9",
  "type": "module",
  "description": "MCP server for ASO data management with shared types and utilities",
  "author": "skyu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/quartz-labs-dev/pabal-resource-mcp"
  },
  "homepage": "https://github.com/quartz-labs-dev/pabal-resource-mcp#readme",
  "bugs": {
    "url": "https://github.com/quartz-labs-dev/pabal-resource-mcp/issues"
  },
  "keywords": [
    "mcp",
    "aso",
    "app-store",
    "google-play",
    "localization"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/browser.js",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js",
      "require": "./dist/browser.js"
    },
    "./server": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "browser": {
    "./dist/index.js": "./dist/browser.js",
    "fs": false,
    "path": false,
    "os": false,
    "node:fs": false,
    "node:path": false,
    "node:os": false
  },
  "sideEffects": false,
  "bin": {
    "pabal-resource-mcp": "dist/bin/mcp-server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/browser.ts src/bin/mcp-server.ts --format esm --dts --external node:fs --external node:path --external node:os",
    "dev": "tsx src/bin/mcp-server.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@google/genai": "^1.38.0",
    "@googleapis/androidpublisher": "^33.2.0",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "appstore-connect-sdk": "^1.3.2",
    "sharp": "^0.34.5",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/sharp": "^0.31.1",
    "tsup": "^8.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.4.5"
  }
}
